{
  "openapi": "3.0.3",
  "info": {
    "title": "Sklad API",
    "version": "2.0.0",
    "description": "Машиночитаемая спецификация API для системы управления складом.\nИспользует аутентификацию Laravel Sanctum через Bearer токен.\n\n## Новые функции в версии 2.0:\n- Система уточнений/корректировок товаров\n- Управление документами товаров\n- Расширенная фильтрация и поиск\n\n## Аутентификация\nДля доступа к защищенным эндпоинтам используйте Bearer токен в заголовке Authorization.\n\n## Роли пользователей\n- `admin` - полный доступ ко всем функциям\n- `manager` - управление товарами и продажами\n- `warehouse_worker` - работа с приемкой товаров\n- `employee` - базовые операции\n"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Локальный сервер разработки"
    },
    {
      "url": "https://sklad.example.com/api",
      "description": "Продакшн сервер"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Аутентификация и авторизация"
    },
    {
      "name": "Products",
      "description": "Управление товарами"
    },
    {
      "name": "Sales",
      "description": "Управление продажами"
    },
    {
      "name": "Requests",
      "description": "Управление заявками"
    },
    {
      "name": "Users",
      "description": "Управление пользователями"
    },
    {
      "name": "Companies",
      "description": "Управление компаниями"
    },
    {
      "name": "Warehouses",
      "description": "Управление складами"
    },
    {
      "name": "Receipts",
      "description": "Приемка товаров"
    },
    {
      "name": "ProductTemplates",
      "description": "Шаблоны товаров"
    },
    {
      "name": "Stocks",
      "description": "Остатки товаров"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Регистрация нового пользователя",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              },
              "example": {
                "name": "Иван Иванов",
                "email": "ivan@example.com",
                "password": "password123",
                "password_confirmation": "password123",
                "company_id": 1
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Пользователь успешно зарегистрирован",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Вход в систему",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              },
              "example": {
                "email": "admin@example.com",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешная аутентификация",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Выход из системы",
        "responses": {
          "200": {
            "description": "Успешный выход",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Получение информации о текущем пользователе",
        "responses": {
          "200": {
            "description": "Информация о пользователе",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Получение списка товаров",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "description": "Поиск по названию, описанию или производителю",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "warehouse_id",
            "in": "query",
            "description": "Фильтр по складу",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "producer_id",
            "in": "query",
            "description": "Фильтр по производителю",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "correction_status",
            "in": "query",
            "description": "Фильтр по статусу корректировки",
            "schema": {
              "type": "string",
              "enum": [
                "none",
                "correction"
              ]
            }
          },
          {
            "name": "in_stock",
            "in": "query",
            "description": "Только товары в наличии",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Номер страницы",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Количество элементов на странице",
            "schema": {
              "type": "integer",
              "default": 15
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список товаров",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductsPaginatedResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Создание нового товара",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProductRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Товар успешно создан",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "422": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Получение товара по ID",
        "parameters": [
          {
            "$ref": "#/components/parameters/ProductId"
          }
        ],
        "responses": {
          "200": {
            "description": "Информация о товаре",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        }
      },
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Обновление товара",
        "parameters": [
          {
            "$ref": "#/components/parameters/ProductId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateProductRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Товар успешно обновлен",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "422": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Удаление товара",
        "parameters": [
          {
            "$ref": "#/components/parameters/ProductId"
          }
        ],
        "responses": {
          "200": {
            "description": "Товар успешно удален",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MessageResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          }
        }
      }
    },
    "/products/{id}/correction": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Добавление уточнения к товару",
        "parameters": [
          {
            "$ref": "#/components/parameters/ProductId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CorrectionRequest"
              },
              "example": {
                "correction": "В товаре ошибка с количеством - всего пришло 90"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Уточнение успешно добавлено",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFoundError"
          },
          "422": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      }
    },
    "/sales": {
      "get": {
        "tags": [
          "Sales"
        ],
        "summary": "Получение списка продаж",
        "parameters": [
          {
            "name": "product_id",
            "in": "query",
            "description": "Фильтр по товару",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Фильтр по статусу",
            "schema": {
              "type": "string",
              "enum": [
                "pending",
                "completed",
                "cancelled"
              ]
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список продаж",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SalesPaginatedResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Sales"
        ],
        "summary": "Создание новой продажи",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSaleRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Продажа успешно создана",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/warehouses": {
      "get": {
        "tags": [
          "Warehouses"
        ],
        "summary": "Получение списка складов",
        "responses": {
          "200": {
            "description": "Список складов",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Warehouse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Warehouses"
        ],
        "summary": "Создание нового склада",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWarehouseRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Склад успешно создан",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Warehouse"
                }
              }
            }
          }
        }
      }
    },
    "/receipts": {
      "get": {
        "tags": [
          "Receipts"
        ],
        "summary": "Получение списка приемок",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Список приемок",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Receipt"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Receipts"
        ],
        "summary": "Создание новой приемки",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateReceiptRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Приемка успешно создана"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "parameters": {
      "ProductId": {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID товара",
        "schema": {
          "type": "integer",
          "example": 1
        }
      }
    },
    "responses": {
      "ValidationError": {
        "description": "Ошибка валидации",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "The given data was invalid.",
              "errors": {
                "name": [
                  "Поле название обязательно для заполнения."
                ]
              }
            }
          }
        }
      },
      "UnauthorizedError": {
        "description": "Ошибка аутентификации",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "Неверные учетные данные"
            }
          }
        }
      },
      "NotFoundError": {
        "description": "Ресурс не найден",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "example": {
              "message": "Товар не найден"
            }
          }
        }
      }
    },
    "schemas": {
      "RegisterRequest": {
        "type": "object",
        "required": [
          "name",
          "email",
          "password",
          "password_confirmation"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Полное имя пользователя"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email адрес"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Пароль"
          },
          "password_confirmation": {
            "type": "string",
            "description": "Подтверждение пароля"
          },
          "company_id": {
            "type": "integer",
            "description": "ID компании"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/User"
          },
          "token": {
            "type": "string",
            "description": "Bearer токен для аутентификации"
          },
          "expires_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Смартфон Samsung Galaxy"
          },
          "description": {
            "type": "string",
            "example": "Смартфон с экраном 6.1 дюйма"
          },
          "quantity": {
            "type": "integer",
            "example": 50
          },
          "sold_quantity": {
            "type": "integer",
            "example": 5
          },
          "calculated_volume": {
            "type": "number",
            "format": "float",
            "example": 0.15
          },
          "status": {
            "type": "string",
            "enum": [
              "in_stock",
              "in_transit",
              "for_receipt"
            ],
            "example": "in_stock"
          },
          "correction": {
            "type": "string",
            "nullable": true,
            "example": "В товаре ошибка с количеством - всего пришло 90"
          },
          "correction_status": {
            "type": "string",
            "enum": [
              "none",
              "correction"
            ],
            "nullable": true,
            "example": "correction"
          },
          "document_path": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "documents/product_1_invoice.pdf",
              "documents/product_1_certificate.pdf"
            ]
          },
          "producer_id": {
            "type": "integer",
            "example": 1
          },
          "warehouse_id": {
            "type": "integer",
            "example": 1
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "template": {
            "$ref": "#/components/schemas/ProductTemplate"
          },
          "warehouse": {
            "$ref": "#/components/schemas/Warehouse"
          },
          "producer": {
            "$ref": "#/components/schemas/Producer"
          }
        }
      },
      "CreateProductRequest": {
        "type": "object",
        "required": [
          "name",
          "product_template_id",
          "warehouse_id",
          "quantity"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "product_template_id": {
            "type": "integer"
          },
          "warehouse_id": {
            "type": "integer"
          },
          "producer_id": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0
          },
          "attributes": {
            "type": "object",
            "description": "Атрибуты товара в формате JSON"
          }
        }
      },
      "UpdateProductRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "minimum": 0
          },
          "attributes": {
            "type": "object"
          }
        }
      },
      "CorrectionRequest": {
        "type": "object",
        "required": [
          "correction"
        ],
        "properties": {
          "correction": {
            "type": "string",
            "minLength": 10,
            "maxLength": 1000,
            "description": "Текст уточнения"
          }
        }
      },
      "ProductsPaginatedResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Product"
            }
          },
          "current_page": {
            "type": "integer"
          },
          "last_page": {
            "type": "integer"
          },
          "per_page": {
            "type": "integer"
          },
          "total": {
            "type": "integer"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "admin",
              "manager",
              "warehouse_worker",
              "employee"
            ]
          },
          "company_id": {
            "type": "integer"
          },
          "warehouse_id": {
            "type": "integer",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "company": {
            "$ref": "#/components/schemas/Company"
          },
          "warehouse": {
            "$ref": "#/components/schemas/Warehouse"
          }
        }
      },
      "Sale": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "product_id": {
            "type": "integer"
          },
          "quantity": {
            "type": "integer"
          },
          "price": {
            "type": "number",
            "format": "float"
          },
          "total_amount": {
            "type": "number",
            "format": "float"
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "completed",
              "cancelled"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "product": {
            "$ref": "#/components/schemas/Product"
          }
        }
      },
      "CreateSaleRequest": {
        "type": "object",
        "required": [
          "product_id",
          "quantity",
